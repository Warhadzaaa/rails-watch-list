<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.ytimg.com/vi/r390vbD_5c8/maxresdefault.jpg);">
  <div class="container">
    <h1><strong><%= @list.name %></strong></h1>
  </div>
</div>
<br>

<div class="container">
  <div class="m-4">
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
</div>
<br>

<div class="container d-flex">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product m-4">
      <img src="https://picsum.photos/200/300" />
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.comment %></p>
        <%=link_to "X", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration" %>
      </div>
    </div>
    <% end %>
</div>
